<div class="container mt-2 content-sarch-user">
    <p>Busca por: {{query}}</p>
    {{#if user.length}}
        {{#each user}}
            <div class="card mt-4">
                <div class="card-header name-phot-user">
                    <div class="nameuser">
                        {{this.nameuser}}
                    </div>
                    <div>
                        {{#if (eq this.profilePicture "/default-profile.png")}}
                            <img src="https://drive.google.com/thumbnail?id=1NT1cawdfecDY3W-YTfFkiyHHAQItTwB9" class="imgUserComent" alt="">
                        {{else}}
                            <img src="https://drive.google.com/thumbnail?id={{this.profilePicture}}" class="imgUserComent" alt="">
                        {{/if}}
                    </div>
                </div>
                <div class="card-body">
                    {{#if biography}}
                        {{this.biography}}
                    {{else}}
                        <p>Sem biografia</p>
                    {{/if}}
                </div>
                {{User._id}}
                <div class="card-footer btnDataConection">
                    <button class="btn btn-success">+Info</button>
                    <form action="/user/addConection" method="post">
                        <input type="hidden" value="{{this._id}}" name="userId" class="idConnected">
                            <button type="submit" class="btn btnConect btn-success d-flex">
                                Conectar
                                <span class="material-symbols-outlined">
                                    network_intelligence
                                </span>
                            </button>
                    </form>
                    <span class="text-danger">*Em desenvolvimento</span>
                </div>
            </div>
        {{else}}
            <p>Nenhum usu√°rio encontrado!</p>
        {{/each}}
    {{/if}}
</div>
