<div class="container mt-4">
    <h2>Seus Grupos de Estudo:</h2>
        <div class="mt-4">
            {{#each groups}}
                <div class="card cardListGroups">
                    <div class="card-header">
                        <h3><strong><i>{{this.nameGroup}}</i></strong></h3>
                        <small>Criado por: <strong>{{this.createdBy.nameuser}}</strong></small> <br>
                        <small>Em: {{this.createdDate}}</small>
                    </div>
                    <div class="card-body">
                        <h4>Descrição</h4>
                        <p>{{this.description}}</p>
                        <hr>
                        <h4>Participantes</h4>
                        <ul class="listGroupMembers">
                            {{#each this.members}}
                                <div class="itemListGroup">
                                    <img src="https://drive.google.com/thumbnail?id={{this.user.profilePicture}}" class="imgUserComent" alt="">
                                    <span>{{this.user.nameuser}}</span> - 
                                    {{#if (eq this.role "admin")}}
                                        <span class="text-success">{{this.role}}</span>
                                    {{else}}    
                                        <span>{{this.role}}</span>
                                    {{/if}}
                                </div>
                                <hr>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-center">
                        <a href="/user/group/{{this._id}}">
                            <button class="btn m-3 btn-success">Acessar</button>
                        </a><span class="text-danger">*Em desenvolvimento</span>
                    </div>
                </div>
            {{else}}
                <div class="container mt-4 contentNoGroup d-flex justify-content-center">
                    <h3>Você ainda não está em nenhum grupo</h3>
                </div>
            {{/each}}
        </div>
</div>