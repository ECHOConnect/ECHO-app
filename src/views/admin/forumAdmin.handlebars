{{! Postagem }}
<div class="container container-post">
  {{#each postagem}}
    <div class="card post mt-4 gap-3">
      <div class="card cardPostForm">
        <div class="card-header">
            <h3>{{this.titulo}}</h3>
            <small>Autor: {{this.author.nameuser}}</small>
          </div>
        <div class="body p-3">
          <p>{{this.conteudo}}</p>
        </div>
        <div class="card-footer">
          <small>{{this.dataCriacao}}</small>
          
        </div>
      </div>
      {{! Respostas }}
      <div class="container btnResp d-flex w-100 d-flex justify-content-center">
        <button
          onclick="openResps('{{this._id}}')"
          class="text-light bg-transparent btn"
        >
          <span class="material-symbols-outlined iconResp">
            mode_comment
          </span>
          <h3>Respostas...</h3>
        </button>
        <div class="text-light container">
          <form action="/admin/forumAdmin/{{this._id}}" method="post">
          <input type="hidden" value="{{author._id}}" name="author">
            <div class="responses-container">
