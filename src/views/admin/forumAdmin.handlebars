                <div class="textarea w-100">
                  <textarea
                    name="conteudo"
                    placeholder="Responda algo sobre isso..."
                    class="form-control text-light bg-dark textR"
                    id="resposta"
                  ></textarea>
                </div>
                <div class="btnSend">
                  <button type="submit" class="btn text-light">
                    <span title="Enviar" class="material-symbols-outlined iconSend">
                      send
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="resps" id="resp-{{this._id}}">
        <hr class="text-light" />
        {{#each this.respostas}}
          <div class="container resp mt-4 w-90">
            <div class="card border-primary contentResponses">
              <div class="card-header">
                <small>Autor: </small>
                {{this.author.nameuser}}
              </div>
